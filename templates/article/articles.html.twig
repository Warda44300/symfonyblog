{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		{% for article in articles %}
			<div class="col-12 col-lg-3 mb-5">    
        	<h2>{{ article.title }}</h2>
        <a href="{{ path('detail', {'id': article.id}) }}">
        <img src="{{ article.image }}" height="110px" width="auto"/>
        </a>
    </div>
		{% endfor %}
	</div>
{% endblock %}