{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<div class="row mb-5 article">
    {% for article in article %}
    <div class="col-12 col-lg-3 mb-5">    
        <h2>{{ article.title }}</h2>
        <a href="/detail/{id}">
        <img src="{{ article.image }}" height="110px" width="auto"/>
        </a>
        <div class="mt-1 mb-5">
            <a href="{{ path('detail', {'id': article.id}) }}"> Lire la suite </a>                      
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
